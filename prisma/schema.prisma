generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
}

model buku {
  id       Int     @id @default(autoincrement())
  judul    String
  penulis  String
  terbit   String
  status   Boolean @default(false)
  sampul   String
  kategori String
}
